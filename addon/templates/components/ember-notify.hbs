{{#each this.messages as |message|}}
  {{#if (has-block)}}
    <EmberNotify::Message
      @message={{message}}
      @theme={{this.theme}}
      @closeAfter={{this.closeAfter}}
      class="ember-notify clearfix"
      as |message close|
    >
      {{yield message close}}
    </EmberNotify::Message>
  {{else}}
    <EmberNotify::Message
      @message={{message}}
      @theme={{this.theme}}
      @closeAfter={{this.closeAfter}}
      class="ember-notify clearfix"
    />
  {{/if}}
{{/each}}